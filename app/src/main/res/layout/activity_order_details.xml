                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/confiremed_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="10.35 PM"
                        android:textColor="@color/gray"
                        app:layout_constraintEnd_toEndOf="@+id/confiremed_date"
                        app:layout_constraintTop_toBottomOf="@+id/confiremed_date" />

                    <TextView
                        android:id="@+id/textView52"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="Order Confirmed"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/order_status_confirmed"
                        app:layout_constraintTop_toTopOf="@+id/confiremed_date" />

                    <TextView
                        android:id="@+id/textView53"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="Chef accept the order."
                        android:textColor="@color/gray"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/textView52"
                        app:layout_constraintTop_toBottomOf="@+id/textView52" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:background="@drawable/dash_line"
                        app:layout_constraintBottom_toTopOf="@+id/order_status_preparing"
                        app:layout_constraintEnd_toEndOf="@+id/order_status_confirmed"
                        app:layout_constraintStart_toStartOf="@+id/order_status_confirmed"
                        app:layout_constraintTop_toBottomOf="@+id/order_status_confirmed" />

                    <ImageView
                        android:id="@+id/order_status_preparing"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/order_not_confirm"
                        app:layout_constraintEnd_toEndOf="@+id/view"
                        app:layout_constraintStart_toStartOf="@+id/view"
                        app:layout_constraintTop_toBottomOf="@+id/view"
                        app:srcCompat="@drawable/tick" />

                    <TextView
                        android:id="@+id/preparing_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="Sep 05, 2025"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toStartOf="@+id/order_status_preparing"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view" />

                    <TextView
                        android:id="@+id/preparing_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="10.35 PM"
                        android:textColor="@color/gray"
                        app:layout_constraintEnd_toEndOf="@+id/preparing_date"
                        app:layout_constraintTop_toBottomOf="@+id/preparing_date" />

                    <TextView
                        android:id="@+id/textView_pending_details"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="Preparing"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/order_status_preparing"
                        app:layout_constraintTop_toBottomOf="@+id/view" />

                    <TextView
                        android:id="@+id/textView_pending"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="Chef Start Coocking."
                        android:textColor="@color/gray"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/textView_pending_details"
                        app:layout_constraintTop_toBottomOf="@+id/textView_pending_details" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:background="@drawable/dash_line"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="@+id/order_status_preparing"
                        app:layout_constraintStart_toStartOf="@+id/order_status_preparing"
                        app:layout_constraintTop_toBottomOf="@+id/order_status_preparing" />

                    <TextView
                        android:id="@+id/textView_pickup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="Ready For Pickup"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/order_status_pickup"
                        app:layout_constraintTop_toBottomOf="@+id/view2" />

                    <TextView
                        android:id="@+id/pickup_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="Sep 05, 2025"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toStartOf="@+id/order_status_pickup"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view2" />

                    <TextView
                        android:id="@+id/pickup_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="10.35 PM"
                        android:textColor="@color/gray"
                        app:layout_constraintEnd_toEndOf="@+id/pickup_date"
                        app:layout_constraintTop_toBottomOf="@+id/pickup_date" />

                    <ImageView
                        android:id="@+id/order_status_pickup"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/order_not_confirm"
                        app:layout_constraintEnd_toEndOf="@+id/view2"
                        app:layout_constraintStart_toStartOf="@+id/view2"
                        app:layout_constraintTop_toBottomOf="@+id/view2"
                        app:srcCompat="@drawable/tick" />

                    <TextView
                        android:id="@+id/textView_pickup_details"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="Order is Packed."
                        android:textColor="@color/gray"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/textView_pickup"
                        app:layout_constraintTop_toBottomOf="@+id/textView_pickup" />

                    <View
                        android:id="@+id/view3"
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:background="@drawable/dash_line"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="@+id/order_status_pickup"
                        app:layout_constraintStart_toStartOf="@+id/order_status_pickup"
                        app:layout_constraintTop_toBottomOf="@+id/order_status_pickup" />

                    <ImageView
                        android:id="@+id/order_status_delivery"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/order_not_confirm"
                        app:layout_constraintEnd_toEndOf="@+id/view3"
                        app:layout_constraintStart_toStartOf="@+id/view3"
                        app:layout_constraintTop_toBottomOf="@+id/view3"
                        app:srcCompat="@drawable/tick" />

                    <TextView
                        android:id="@+id/delivery_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="Sep 05, 2025"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toStartOf="@+id/order_status_delivery"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view3" />

                    <TextView
                        android:id="@+id/delivery_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="10.35 PM"
                        android:textColor="@color/gray"
                        app:layout_constraintEnd_toEndOf="@+id/delivery_date"
                        app:layout_constraintTop_toBottomOf="@+id/delivery_date" />

                    <TextView
                        android:id="@+id/textViewDelivery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="Out for Delivery"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/order_status_delivery"
                        app:layout_constraintTop_toBottomOf="@+id/view3" />

                    <TextView
                        android:id="@+id/textViewDelivery_details"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="Delivery agent picks up the order."
                        android:textColor="@color/gray"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/textViewDelivery"
                        app:layout_constraintTop_toBottomOf="@+id/textViewDelivery" />

                    <View
                        android:id="@+id/view4"
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:background="@drawable/dash_line"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="@+id/order_status_delivery"
                        app:layout_constraintStart_toStartOf="@+id/order_status_delivery"
                        app:layout_constraintTop_toBottomOf="@+id/order_status_delivery" />

                    <ImageView
                        android:id="@+id/order_status_delivered"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/order_not_confirm"
                        app:layout_constraintEnd_toEndOf="@+id/view4"
                        app:layout_constraintStart_toStartOf="@+id/view4"
                        app:layout_constraintTop_toBottomOf="@+id/view4"
                        app:srcCompat="@drawable/tick" />

                    <TextView
                        android:id="@+id/delivered_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="Sep 05, 2025"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toStartOf="@+id/order_status_delivered"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view4" />

                    <TextView
                        android:id="@+id/delivered_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="10.35 PM"
                        android:textColor="@color/gray"
                        app:layout_constraintEnd_toEndOf="@+id/delivered_date"
                        app:layout_constraintTop_toBottomOf="@+id/delivered_date" />

                    <TextView
                        android:id="@+id/textViewDelivered_details"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/opensans_regular"
