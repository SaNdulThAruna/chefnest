<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sellerOrder_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/filter_category_border"
    android:elevation="20dp">

    <TextView
        android:id="@+id/textView64"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:fontFamily="@font/opensans_semibold"
        android:text="Qty: "
        android:textAlignment="textStart"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toBottomOf="@+id/sellerOrder_id"
        app:layout_constraintEnd_toStartOf="@+id/sellerOrder_qty"
        app:layout_constraintStart_toEndOf="@+id/sellerOrder_id"
        app:layout_constraintTop_toTopOf="@+id/sellerOrder_id" />

    <TextView
        android:id="@+id/sellerOrder_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="134dp"
        android:fontFamily="@font/opensans_semibold"
        android:text="5"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/textView64"
        app:layout_constraintEnd_toStartOf="@+id/sellerOrder_price"
        app:layout_constraintStart_toEndOf="@+id/textView64"
        app:layout_constraintTop_toTopOf="@+id/textView64" />

    <TextView
        android:id="@+id/sellerOrder_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/opensans_regular"
        android:singleLine="true"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sellerOrder_img"
        app:layout_constraintTop_toTopOf="@+id/sellerOrder_img" />

    <TextView
        android:id="@+id/sellerOrder_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/opensans_regular"
        android:text="#00000"
        android:textAlignment="textStart"
        android:textColor="@color/gray"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/sellerOrder_img"
        app:layout_constraintStart_toStartOf="@+id/sellerOrder_title"
        app:layout_constraintTop_toBottomOf="@+id/sellerOrder_title" />

    <com.sandul.chefnest.ui.customUI.RoundedImageView
        android:id="@+id/sellerOrder_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/popular_item_cover"
        android:clipToOutline="true"
        android:outlineProvider="background"
        android:scaleType="centerCrop"
        android:src="@drawable/back2"
        app:layout_constraintBottom_toTopOf="@+id/sellerOrder_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sellerOrder_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/filter_category_border"
        android:backgroundTint="@color/gray_light"
        android:fontFamily="@font/opensans_regular"
        android:paddingStart="8dp"
        android:paddingTop="5dp"
        android:paddingEnd="8dp"
        android:paddingBottom="5dp"
        android:singleLine="true"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sellerOrder_customer_name"
        app:layout_constraintStart_toStartOf="@+id/sellerOrder_img"
        app:layout_constraintTop_toBottomOf="@+id/sellerOrder_img" />

    <TextView
        android:id="@+id/sellerOrder_customer_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/filter_category_border"
        android:backgroundTint="@color/gray_light2"
        android:fontFamily="@font/opensans_regular"
        android:paddingStart="8dp"
        android:paddingTop="5dp"
        android:paddingEnd="8dp"
        android:paddingBottom="5dp"
        android:singleLine="true"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toBottomOf="@+id/sellerOrder_status"
        app:layout_constraintEnd_toStartOf="@+id/sellerOrder_city_code"
        app:layout_constraintStart_toEndOf="@+id/sellerOrder_status"
        app:layout_constraintTop_toTopOf="@+id/sellerOrder_status" />

    <TextView
        android:id="@+id/sellerOrder_city_code"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/filter_category_border"
        android:backgroundTint="#2A042390"
        android:fontFamily="@font/opensans_regular"
        android:paddingStart="8dp"
        android:paddingTop="5dp"
        android:paddingEnd="8dp"
        android:paddingBottom="5dp"
        android:singleLine="true"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/dark_blue"
        app:layout_constraintBottom_toBottomOf="@+id/sellerOrder_customer_name"
        app:layout_constraintEnd_toEndOf="@+id/sellerOrder_title"
        app:layout_constraintStart_toEndOf="@+id/sellerOrder_customer_name" />

    <TextView
        android:id="@+id/sellerOrder_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_regular"
        android:text="Rs.1500"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView64"
        app:layout_constraintEnd_toEndOf="@+id/sellerOrder_title"
        app:layout_constraintTop_toTopOf="@+id/textView64" />
</androidx.constraintlayout.widget.ConstraintLayout>