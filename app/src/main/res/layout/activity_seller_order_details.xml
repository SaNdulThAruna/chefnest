                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/seller_order_title2"
                    app:layout_constraintStart_toEndOf="@+id/seller_order_title2"
                    app:layout_constraintTop_toTopOf="@+id/seller_order_title2" />

                <TextView
                    android:id="@+id/seller_order_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
