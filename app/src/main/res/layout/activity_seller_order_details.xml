                        app:layout_constraintEnd_toEndOf="@+id/seller_view2"
                        app:layout_constraintStart_toStartOf="@+id/seller_view2"
                        app:layout_constraintTop_toBottomOf="@+id/seller_view2"
                        app:srcCompat="@drawable/tick" />

                    <TextView
                        android:id="@+id/seller_textView_pickup_details"
                        android:layout_width="0dp"
