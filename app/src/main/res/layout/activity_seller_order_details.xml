                        app:layout_constraintStart_toStartOf="@+id/seller_order_status_confirmed"
                        app:layout_constraintTop_toBottomOf="@+id/seller_order_status_confirmed" />

                    <ImageView
                        android:id="@+id/seller_order_status_preparing"
