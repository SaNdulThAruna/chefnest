                    android:fontFamily="@font/opensans_regular"
                    android:singleLine="true"
                    android:text="Price: "
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/seller_order_title"
                    app:layout_constraintTop_toBottomOf="@+id/seller_order_title" />

                <TextView
                    android:id="@+id/seller_order_title6"
