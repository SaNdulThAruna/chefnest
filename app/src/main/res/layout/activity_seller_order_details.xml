                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/seller_order_title4"
                    app:layout_constraintEnd_toEndOf="@+id/seller_order_title"
                    app:layout_constraintTop_toTopOf="@+id/seller_order_title4"
