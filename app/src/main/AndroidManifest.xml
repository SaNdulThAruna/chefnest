<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChefNest"
        tools:targetApi="31">
        <activity
            android:name=".ui.customer.activity.ReviewsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.customer.activity.AddressActivity"
            android:exported="false" />
        <activity
            android:name=".ui.customer.activity.CheckoutActivity"
            android:exported="false" />
        <activity
            android:name=".ui.admin.activity.AdminActivity"
            android:exported="false" />
        <activity
            android:name=".ui.seller.activity.SellerEditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.seller.activity.SellerOrderDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.seller.activity.AddProductActivity"
            android:exported="false" />
        <activity
            android:name=".ui.customer.activity.OrderDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.customer.activity.AboutUsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.seller.activity.SellerActivity"
            android:exported="false" />
        <activity
            android:name=".ui.customer.activity.UserEditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.customer.activity.SearchActivity"
            android:exported="false" />
        <activity
            android:name=".ui.customer.activity.SingleProductActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.VerificationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.customer.activity.CartActivity"
            android:exported="false" />
        <activity
            android:name=".ui.customer.activity.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.SignupActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.SignInActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />
    </application>

</manifest>